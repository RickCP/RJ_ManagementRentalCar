<?xml version="1.0" encoding="ISO-8859-1"?>
<decorators defaultdir="/WEB-INF/jsp/decorators">
	<excludes>
		<pattern>/assets/*</pattern>
		<pattern>/META-INF/*</pattern>
	</excludes>

	<decorator name="admin" page="admin.jsp">
		<pattern>/admin/*</pattern>
		<pattern>/manager/*</pattern>
	</decorator>

	<decorator name="welcome" page="welcome.jsp">
		<pattern>/welcome/*</pattern>
	</decorator>

	<decorator name="user" page="sign_in.jsp">
		<pattern>/user/*</pattern>
	</decorator>
	
</decorators>

